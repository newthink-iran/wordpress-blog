<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:orderingFromXml="true">
	<PreferenceCategory
		android:title="@string/setting_title_links">
		
		<Preference
			android:title="link title"
			android:summary="url title(possible)">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="http://codecanyon.net" />
		</Preference>
		
		<Preference
			android:title="Blog Website"
			android:summary="@string/blogurl">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/blogurl" />
		</Preference>
		
	</PreferenceCategory>
</PreferenceScreen>
